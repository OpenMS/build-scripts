<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>de.openms.NightlyDashboard</string>

  <key>ProgramArguments</key>
  <array>
    <string>/bin/bash</string>
    <string>-lx</string>
    <string><path to bootstrap.sh>/bootstrap.sh</string>
  </array>

  <key>Nice</key>
  <integer>1</integer>

  <key>StartCalendarInterval</key>
  <dict>
        <key>Hour</key>
        <integer>2</integer>
        <key>Minute</key>
        <integer>0</integer>
  </dict>

  <key>StandardErrorPath</key>
  <string><path to log files>/de.openms.NightlyDashboard.err</string>

  <key>StandardOutPath</key>
  <string><path to log files>/de.openms.NightlyDashboard.out</string>
</dict>
</plist>